@model Qnform

@{ 
    var name = ViewBag.PatientName;
}

<div class="modal" id="QDFormModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>
                    <i class="fa fa-user-md"></i>
                    &nbsp;Daily Monitoring Form
                </h4>
            </div>
            <div class="modal-body">
                <form asp-action="QNForm">
                    <input type="hidden" asp-for="Id" />
                    <!--PATIENT NAME-->

                    <div class="row" style="padding:5px">
                        <div class="col-sm-8">
                            <strong style="color: cornflowerblue;font-size:small;">Patient</strong><br />
                            <strong style="color: crimson;font-size:large;padding:20px">@name</strong>
                        </div>
                        <div class="col-sm-4">
                            <strong style="color: cornflowerblue;font-size:small;">Check-up date:</strong>
                            <input class="form-control" style="font-size:medium;padding:18px" asp-for="ClinicalParametersQn[0].DateChecked" />
                        </div>
                    </div>

                    <!--Clinical Parameters-->
                    <div class="panel-heading"><strong style="color: cornflowerblue;font-size:small;">Clinical Parameters</strong></div>
                    <div class="row" style="padding:5px">
                        <div class="col-sm-3">
                            Blood Pressure:
                            <input type="text" autofocus class="form-control" asp-for="ClinicalParametersQn[0].Bp" />
                        </div>
                        <div class="col-sm-3">
                            Heart Rate:
                            <input type="text" autofocus class="form-control" asp-for="ClinicalParametersQn[0].Hr" />
                        </div>
                        <div class="col-sm-3">
                            Respiratory Rate:
                            <input type="text" autofocus class="form-control" asp-for="ClinicalParametersQn[0].Rr" />
                        </div>
                        <div class="col-sm-3">
                            O2sat:
                            <input type="text" autofocus class="form-control" asp-for="ClinicalParametersQn[0].O2sat" />
                        </div>
                    </div>

                    <div class="row" style="padding:5px">
                        <div class="col-sm-3">
                            Type of IV Fluids:
                            <input type="text" autofocus class="form-control" />
                        </div>
                        <div class="col-sm-3">
                            IV Rate:
                            <input type="text" autofocus class="form-control" id="" placeholder="Rate" />
                        </div>
                        <div class="col-sm-3">
                            Time Fluid Started
                            <input autofocus class="form-control" asp-for="ClinicalParametersQn[0].TimeFluidStarter" />
                        </div>
                        <div class="col-sm-3">
                            Time Fluid Changed
                            <input type="text" autofocus class="form-control" asp-for="ClinicalParametersQn[0].TimeFluidChanged" />
                        </div>
                    </div>

                    <div class="row" style="padding:5px">
                        <div class="col-sm-4">
                            <input type="text" autofocus class="form-control" asp-for="ClinicalParametersQn[0].UrineOutput" />
                        </div>
                    </div>
                    <div class="row" style="padding:5px">

                    </div>
                    <!--MAINTENANCE MEDICATION & IF GIVEN-->
                    <div class="row" style="padding:5px">
                        <div class="col-sm-12">
                            <div class="row">
                                <label class="col-sm-6" style="font-size:medium;font-weight:500;padding:10px">INSERT MEDICATION (ENUMERATE) AND CHECK IF GIVEN</label>

                                <fieldset id="medications" style="border-color:black; border:double; padding:10px" class="col-sm-12">

                                    <div class="row" style="padding:5px">
                                        <div class="col-sm-6">
                                            <label style="font-size:medium;font-weight:500;padding:10px">Medicine</label>
                                        </div>
                                        <div class="col-sm-4">
                                            <label style="font-size:medium;font-weight:500;padding:10px">Does the medicine given?</label>
                                        </div>
                                        <div class="col-sm-2">
                                            <a class="btn btn-block btn-primary btn-sm" onclick="addRow();">
                                                <i class="fa fa-plus"></i>
                                                &nbsp; Add New
                                            </a>
                                        </div>
                                    </div>
                                    @for (int x = 0; x < Model.ClinicalParametersQn[0].Medications.Count(); x++)
                                    {
                                        if (x == Model.ClinicalParametersQn[0].Medications.Count() - 1)
                                        {
                                            <input id="lastval" value="@x" hidden />
                                        }
                                        <div class="row" style="padding:5px">
                                            <div class="col-sm-6 medname">
                                                <input type="text" asp-for="ClinicalParametersQn[0].Medications[x].MedName" class="form-control" placeholder="Medicine" />
                                            </div>
                                            <div class="col-sm-6 medtaken">
                                                <input class="form-control" asp-for="ClinicalParametersQn[0].Medications[x].MedTaken" />
                                            </div>
                                        </div>
                                    }
                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <!--QUARANTINE NURSE-->
                    <div class="row" style="padding:10px">
                        <label class="col-sm-4" style="font-size:medium;font-weight:500;padding:10px">Signature of Quarantine Nurse</label>
                        <div class="col-sm-8">
                            <input type="text" autofocus class="form-control" id="QDoctor" placeholder="Signature of Quarantine Nurse" />
                        </div>
                    </div>

                    <!--SUBMIT BUTTON-->
                    <div class="col-sm-12" align="center" style="padding:10px">
                        <div class="col-sm-4" align="right">
                            <button class="btn btn-block btn-primary btn-lg" data-save="modal">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    var x = 0;
    var time = $('#ClinicalParametersQn_0__Medications_0__MedTaken').val();
    $(function () {
        if ($('#lastval').val() > 0) {
            x = $('#lastval').val();
        }
    })
    function addRow() {
        x = +x + 1;
        //var time = $('#ClinicalParametersQn_0__Medications_0__MedTaken').val();
        console.log(time);
        $(".medname").append('<input type="text" class="form-control" placeholder="Medicine" data-val="true" data-val-length="The field MedName must be a string with a maximum length of 255." data-val-length-max="255" data-val-required="The MedName field is required." id="ClinicalParametersQn_0__Medications_'+x+'__MedName" maxlength="255" name="ClinicalParametersQn[0].Medications[' + x + '].MedName" value="">');
        $(".medtaken").append('<input class="form-control" type="datetime-local" data-val="true" data-val-required="The MedTaken field is required." id="ClinicalParametersQn_0__Medications_'+x+'__MedTaken" name="ClinicalParametersQn[0].Medications[' + x + '].MedTaken" value="'+time+'" >');

        //$('#medtaken').find('#ClinicalParametersQn_0__Medications_' + x + '__MedTaken').val(time);

        event.preventDefault();
        console.log(x);
    }
</script>