@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
    <div class="login-page" style="background-color:#F8F9FA;padding:20px">
        <div class="login-box col-md-12"  style="padding:20px">
            <div class="login-logo">
                <div class="center">
                    <h1>
                        <img src="~/img/dohlogo.png" style="width:30%;" alt="DOH-Logo" />
                    </h1>
                    <h6 class="blue" id="id-company-text"> DEPARTMENT OF HEALTH CENTER FOR HEALTH DEVELOPMENT</h6>
                    <h4>
                        <span class="red">Patient Data Record - Covid19 </span>
                    </h4>
                </div>
                <div class="space-6"></div>
            </div><!-- /.login-logo -->
            <div class="login-box-body" style="background-color:aliceblue;padding:20px">
               
                <p class="login-box-msg">  <i class="fa fa-user"></i> &nbsp; Please Enter Your Information</p>
                <form asp-action="Login">
                    <!--Username-->
                    <div class="form-group has-feedback">
                        <input asp-for="Username" class="form-control" placeholder="Username">
                    </div>
                    <!--Password-->
                    <div class="form-group has-feedback">
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>
                    <!--Remember/Login btn-->
                    <div class="row" style="padding:10px">
                        <div class="col-sm-8">
                        </div>
                        <div class="col-sm-4" style="align-content:end">
                            <button type="submit" class="btn btn-sm btn-primary">
                                <i class="fa fa-key"></i>
                                <span>Login</span>
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>