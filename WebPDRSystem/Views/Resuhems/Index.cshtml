@model IEnumerable<Pdr>

@{
    ViewData["Title"] = "Index";
}

    <div class="col-md-12">

        <!-- CARD START-->
        <div class="card">
            <!-- CARD DANGER HEADER -->
            <div class="card-header">
                <h3 class="card-title">
                    Added patients
                </h3>
                <div class="clearfix"></div>
            </div>
            <div class="card-body">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Sex</th>
                            <th>Age</th>
                            <th>Date of birth</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() != 0)
                        {
                            foreach (var item in Model)
                            {
                                var gender = item.PatientNavigation.Gender ? "Male" : "Female";
                                <tr>
                                    <td>
                                        @item.PatientNavigation.GetFullName()
                                    </td>
                                    <td>
                                        @gender
                                    </td>
                                    <td>
                                        @item.PatientNavigation.DateOfBirth.ComputeAge()
                                    </td>
                                    <td>
                                        @item.PatientNavigation.DateOfBirth.ToString("MMMM dd, yyyy")
                                    </td>
                                    <td>
                                        @item.PatientNavigation.GetAddress()
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">No Patients!</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
