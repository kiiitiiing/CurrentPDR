@model List<Medications>

@{ 
    var dayss = Model.GroupBy(x => x.Day)
        .Select(x => new
        {
            day = (int)x.Key
        })
        .ToList();

    var days = new List<int>();

    foreach(var item in dayss)
    {
        days.Add(item.day);
    }
    days.Sort();
}

<div class="modal fade" id="medovv" style="font-size: 14px; font-weight:500;">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content clearfix">
            <div class="modal-header">
                <h4>Medications taken by @ViewBag.Patient</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                @if (Model.Count() != 0)
                {
                    <table class="table table-bordered table-hover table-responsive">
                        <thead>
                            <tr style="text-align: center;">
                                <th rowspan="2">
                                    MEDICATION<br />
                                    <small>
                                        (DOSAGE, ROUTE & FREQUENCY)
                                    </small>
                                </th>
                                @for(int x = 0; x < days.Count(); x++)
                                {
                                    <th colspan="3">
                                        DAY @days[x] : @Model.Where(c=>c.Day == days[x]).FirstOrDefault().CreatedAt.ToString("dd/MM/yyyy")
                                    </th>
                                }
                            </tr>
                            <tr>
                                @for (int x = 0; x < days.Count(); x++)
                                {
                                    <th>
                                        <small>
                                            TIME
                                        </small>
                                    </th>
                                    <th>
                                        <small>
                                            TIME
                                        </small>
                                    </th>
                                    <th>
                                        <small>
                                            TIME
                                        </small>
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var med in Model.GroupBy(x=>x.MedName))
                            {
                                var meddss = med.Key.Split(new[] { ' ' }, 2);
                                var medname = meddss[0];
                                var medparams = meddss[1];
                                <tr>
                                    <td style="word-wrap: break-word !important;">
                                        @medname<br />
                                        <small>
                                            @medparams
                                        </small>
                                    </td>
                                    @for(int x = 0; x<days.Count();x++)
                                    {
                                        var curDay = Model.Where(c => c.Day == days[x]);
                                        <td>
                                            @foreach(var dates in med.OrderBy(x=>x.CreatedAt).Where(x=>x.CreatedAt.Hour >=0 && x.CreatedAt.Hour <8).Where(c=>c.Day == days[x]))
                                            {
                                                @if (dates.Discontinued)
                                                {
                                                    <span>//</span>
                                                }
                                                else
                                                {
                                                    <small>
                                                        @dates.CreatedAt.ToString("hh:mm tt", CultureInfo.InvariantCulture) - @dates.SignatureNurseNavigation.Initials
                                                    </small>
                                                    @if (!string.IsNullOrEmpty(dates.Comments))
                                                    {
                                                        <pre>@dates.Comments</pre>
                                                    }
                                                    else
                                                    {
                                                        <br />
                                                    }
                                                }
                                            }
                                        </td>
                                        <td>
                                            @foreach (var dates in med.OrderBy(x=>x.CreatedAt).Where(x => x.CreatedAt.Hour >= 8 && x.CreatedAt.Hour < 16).Where(c => c.Day == days[x]))
                                            {
                                                @if (dates.Discontinued)
                                                {
                                                    <span>//</span>
                                                }
                                                else
                                                {
                                                    <small>
                                                        @dates.CreatedAt.ToString("hh:mm tt", CultureInfo.InvariantCulture) - @dates.SignatureNurseNavigation.Initials
                                                    </small>
                                                    @if (!string.IsNullOrEmpty(dates.Comments))
                                                    {
                                                        <pre>@dates.Comments</pre>
                                                    }
                                                    else
                                                    {
                                                        <br />
                                                    }
                                                }
                                            }
                                        </td>
                                        <td>
                                            @foreach (var dates in med.OrderBy(x=>x.CreatedAt).Where(x => x.CreatedAt.Hour >= 16 && x.CreatedAt.Hour <= 23).Where(c => c.Day == days[x]))
                                            {
                                                @if (dates.Discontinued)
                                                {
                                                    <span>//</span>
                                                }
                                                else
                                                {
                                                    <small>
                                                        @dates.CreatedAt.ToString("hh:mm tt", CultureInfo.InvariantCulture) - @dates.SignatureNurseNavigation.Initials
                                                    </small>
                                                    @if (!string.IsNullOrEmpty(dates.Comments))
                                                    {
                                                        <pre>@dates.Comments</pre>
                                                    }
                                                    else
                                                    {
                                                        <br />
                                                    }
                                                }
                                            }
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <span class="text-danger">No Records found!</span>
                }
            </div>
        </div>
    </div>

</div>